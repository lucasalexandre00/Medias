<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/id_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculadora de Média"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/id_edittext_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="valor 1"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toBottomOf="@+id/id_textview"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:id="@+id/id_edittext_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="valor 2"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toBottomOf="@id/id_edittext_one"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:id="@+id/id_edittext_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="valor 3"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toBottomOf="@id/id_edittext_two"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:id="@+id/id_edittext_four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="valor 4"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toBottomOf="@id/id_edittext_three"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:id="@+id/id_edittext_five"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="valor 5"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toBottomOf="@id/id_edittext_four"
        app:layout_constraintStart_toStartOf="parent"/>


    <EditText
        android:id="@+id/id_edittext_peso_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="peso 1"
        android:inputType="numberDecimal"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="@+id/id_edittext_one"
        app:layout_constraintStart_toEndOf="@+id/id_edittext_one"/>
    <EditText
        android:id="@+id/id_edittext_peso_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="peso 2"
        android:inputType="numberDecimal"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="@+id/id_edittext_two"
        app:layout_constraintStart_toEndOf="@+id/id_edittext_two"/>
    <EditText
        android:id="@+id/id_edittext_peso_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="peso 3"
        android:inputType="numberDecimal"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="@+id/id_edittext_three"
        app:layout_constraintStart_toEndOf="@+id/id_edittext_three"/>
    <EditText
        android:id="@+id/id_edittext_peso_four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="peso 4"
        android:inputType="numberDecimal"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="@+id/id_edittext_four"
        app:layout_constraintStart_toEndOf="@+id/id_edittext_four"/>
    <EditText
        android:id="@+id/id_edittext_peso_five"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="peso 5"
        android:inputType="numberDecimal"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="@+id/id_edittext_five"
        app:layout_constraintStart_toEndOf="@+id/id_edittext_five"/>


    <RadioGroup
        android:id="@+id/id_radiogroup"
        app:layout_constraintTop_toBottomOf="@+id/id_edittext_five"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
    >
        <RadioButton
            android:id="@+id/id_radiobutton_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Média aritmética"/>
        <RadioButton
            android:id="@+id/id_radiobutton_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Média ponderada"/>
        <RadioButton
            android:id="@+id/id_radiobutton_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Média harmônica"/>
    </RadioGroup>

    <Button
        android:id="@+id/id_button_calcular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular Média"
        app:layout_constraintTop_toBottomOf="@+id/id_radiogroup"
        app:layout_constraintStart_toStartOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>